<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Insurance - GigSetu</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      color: white;
      min-height: 100vh;
    }

    .navbar {
      backdrop-filter: blur(12px);
      background: rgba(255,255,255,0.08);
    }

    .glass-card {
      background: rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 28px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.12);
      box-shadow: 0 10px 30px rgba(0,0,0,0.25);
      margin-bottom: 24px;
    }

    .btn-primary {
      background: linear-gradient(45deg,#00c6ff,#0072ff);
      border: none;
    }

    .badge-status {
      padding: 6px 12px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
    }

    .badge-pending { background: #f59e0b; }
    .badge-approved { background: #22c55e; }
    .badge-rejected { background: #ef4444; }

    .footer {
      background: rgba(0,0,0,0.5);
      padding: 24px;
      text-align: center;
      margin-top: 60px;
      opacity: 0.85;
    }
  </style>
</head>
<body>


<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/dashboard">GigSetu</a>
    <div>
      <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">Dashboard</a>
      <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>
  </div>
</nav>

<div class="container py-5">

  <h2 class="fw-bold mb-4">üõ°Ô∏è Micro-Insurance</h2>

  <% if (!user.insurance || !user.insurance.enrolled) { %>
    <div class="glass-card">
      <h4 class="mb-3">Enroll in Insurance</h4>
      <p class="opacity-75 mb-3">
        Protect yourself with affordable health or accident cover designed for gig workers.
      </p>

      <form method="POST" action="/insurance/enroll" class="row g-3">
        <div class="col-md-6">
          <select name="policyType" class="form-select" required>
            <option value="" disabled selected>Select Policy Type</option>
            <option value="health">Health Insurance</option>
            <option value="accident">Accident Insurance</option>
          </select>
        </div>
        <div class="col-md-6">
          <button type="submit" class="btn btn-primary w-100">
            Enroll Now
          </button>
        </div>
      </form>
    </div>
  <% } else { %>
    <div class="glass-card">
      <h4 class="mb-2">‚úÖ Insurance Active</h4>
      <p class="mb-1">Policy Type: <strong class="text-info"><%= user.insurance.policyType %></strong></p>
      <p class="mb-1">Policy ID: <strong><%= user.insurance.policyId %></strong></p>
      <p class="opacity-75">Enrolled on: <%= new Date(user.insurance.enrolledAt).toDateString() %></p>
    </div>

    <div class="glass-card">
      <h4 class="mb-3">Submit Insurance Claim</h4>
      <form method="POST" action="/insurance/claim" class="row g-3">
        <div class="col-12">
          <textarea
            name="reason"
            class="form-control"
            rows="4"
            placeholder="Describe your issue / incident"
            required
          ></textarea>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary w-100">
            Submit Claim
          </button>
        </div>
      </form>
    </div>
  <% } %>

  <% if (typeof myClaims !== "undefined" && myClaims.length > 0) { %>
    <div class="glass-card">
      <h4 class="mb-3">üìÑ My Claims</h4>

      <% myClaims.forEach(claim => { %>
        <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded" style="background:rgba(255,255,255,0.06);">
          <div>
            <p class="mb-1"><strong><%= claim.policyType %></strong> claim</p>
            <small class="opacity-75"><%= new Date(claim.createdAt).toDateString() %></small>
          </div>

          <div>
            <% if (claim.status === "pending") { %>
              <span class="badge-status badge-pending">Pending</span>
            <% } else if (claim.status === "approved") { %>
              <span class="badge-status badge-approved">Approved ‚Çπ<%= claim.payoutAmount %></span>
            <% } else { %>
              <span class="badge-status badge-rejected">Rejected</span>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <a href="/dashboard" class="btn btn-outline-light mt-3">‚¨Ö Back to Dashboard</a>
</div>


<div class="footer">
  <p>¬© 2026 GigSetu | Micro-Insurance for Gig Workers</p>
</div>

</body>
</html>