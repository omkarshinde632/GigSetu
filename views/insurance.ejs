<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Insurance - GigSetu</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      color: white;
      min-height: 100vh;
    }

    .glass-card {
      background: rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 24px;
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255,255,255,0.12);
      margin-bottom: 20px;
    }

    input, textarea, select {
      background: rgba(0,0,0,0.3) !important;
      border: 1px solid rgba(255,255,255,0.2) !important;
      color: white !important;
    }

    .status-badge {
      padding: 6px 14px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
    }

    .pending_review { background: #f59e0b; }
    .approved { background: #22c55e; }
    .rejected { background: #ef4444; }
  </style>
</head>
<body>
  <%- include("partials/header", { title: "Home - GigSetu" }) %>

<div class="container py-5">

  <h2 class="fw-bold mb-4">üõ°Ô∏è Micro-Insurance</h2>

  <% if (!user.insurance || !user.insurance.enrolled) { %>

    <div class="glass-card">
      <h4>Enroll in Insurance</h4>
      <form method="POST" action="/insurance/enroll">
        <select name="policyType" class="form-select mb-3" required>
          <option value="health">Health Insurance</option>
          <option value="accident">Accident Insurance</option>
        </select>
        <button class="btn btn-primary">Enroll</button>
      </form>
    </div>

  <% } else { %>

    <div class="glass-card">
      <p>‚úÖ Enrolled in <strong><%= user.insurance.policyType %></strong></p>
      <p>Policy ID: <%= user.insurance.policyId %></p>
    </div>

    <!-- APPLY CLAIM -->
    <div class="glass-card">
      <h4>üìÑ Apply for Insurance Claim</h4>

      <form method="POST" action="/insurance/claim" enctype="multipart/form-data">

        <div class="mb-3">
          <label>Reason for Claim</label>
          <textarea name="reason" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
          <label>Requested Amount (‚Çπ)</label>
          <input type="number" name="requestedAmount" class="form-control" required>
        </div>

        <div class="mb-3">
          <label>Upload Hospital / Medical Document</label>
          <input type="file" name="document" class="form-control" required>
        </div>

        <button class="btn btn-success">Submit Claim</button>
      </form>
    </div>

  <% } %>

  <!-- MY CLAIMS -->
  <% if (myClaims && myClaims.length > 0) { %>

    <h4 class="mt-5">üßæ My Claims</h4>

    <% myClaims.forEach(claim => { %>
      <div class="glass-card">

        <div class="d-flex justify-content-between">
          <div>
            <p><strong>Policy:</strong> <%= claim.policyType %></p>
            <p><strong>Reason:</strong> <%= claim.reason %></p>
            <p><strong>Requested:</strong> ‚Çπ<%= claim.requestedAmount %></p>

            <% if (claim.status === "approved") { %>
              <p class="text-success">
                üí∞ Approved Amount: ‚Çπ<%= claim.payoutAmount %>
              </p>
            <% } %>

            <% if (claim.status === "rejected") { %>
              <p class="text-danger">‚ùå Claim Rejected</p>
            <% } %>
          </div>

          <div>
            <span class="status-badge <%= claim.status %>">
              <%= claim.status.replace("_", " ") %>
            </span>
          </div>
        </div>

      </div>
    <% }) %>

  <% } %>

  <a href="/dashboard" class="btn btn-outline-light mt-4">‚¨Ö Back to Dashboard</a>

</div>

</body>
<%- include("partials/footer") %>
</html>