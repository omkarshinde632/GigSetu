<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Dashboard - GigSetu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>

<div class="dashboard-wrapper">

    <div class="sidebar">
        <h4 class="logo">GigSetu</h4>
        <ul>
            <li class="active"><i class="fas fa-home"></i> Dashboard</li>
            <li><i class="fas fa-briefcase"></i> My Gigs</li>
            <li><i class="fas fa-file-alt"></i> Applications</li>
            <li><i class="fas fa-wallet"></i> Earnings</li>
            <li><i class="fas fa-user"></i> Profile</li>
            <li><i class="fas fa-sign-out-alt"></i> Logout</li>
        </ul>
    </div>

    <div class="main-content">

        <div class="topbar d-flex justify-content-between align-items-center">
            <h3>Welcome, <%= user.name %> ðŸ‘‹</h3>
            <div>
                <i class="fas fa-bell notification-icon"></i>
                <img src="/images/user.png" class="profile-img">
            </div>
        </div>

        <div class="row mt-4">

            <div class="col-md-3">
                <div class="card stat-card">
                    <h6>Active Gigs</h6>
                    <h2><%= activeGigs.length %></h2>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card">
                    <h6>Applications</h6>
                    <h2><%= applications.length %></h2>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card">
                    <h6>Total Earnings</h6>
                    <h2>â‚¹ <%= totalEarnings %></h2>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card">
                    <h6>Rating</h6>
                    <h2><%= user.rating || 4.5 %></h2>
                </div>
            </div>

        </div>

        <!-- Active Gigs Section -->
        <div class="card mt-4 p-4">
            <h5 class="mb-3">Current Active Gigs</h5>

            <% if(activeGigs.length === 0){ %>
                <p class="text-muted">No active gigs right now.</p>
            <% } else { %>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Gig Title</th>
                            <th>Client</th>
                            <th>Deadline</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% activeGigs.forEach(gig => { %>
                            <tr>
                                <td><%= gig.title %></td>
                                <td><%= gig.clientName %></td>
                                <td><%= gig.deadline %></td>
                                <td><span class="badge bg-success">In Progress</span></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

            <% } %>
        </div>

    </div>
</div>

</body>
</html>