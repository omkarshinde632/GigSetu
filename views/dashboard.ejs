<script>
    async function askAI() {
        const input = document.getElementById("ai-question");
        const msgBox = document.getElementById("ai-messages");
        const question = input.value.trim();
        if (!question) return;

        msgBox.innerHTML += `<div class="mb-2 text-end"><span class="p-2 rounded-3 d-inline-block" style="background:rgba(255,255,255,0.1)">${question}</span></div>`;
        input.value = "";

        const res = await fetch("/ai/ask", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ question })
        });
        const data = await res.json();

        msgBox.innerHTML += `<div class="mb-2"><span class="p-2 rounded-3 d-inline-block text-info" style="background:rgba(0,198,255,0.1)">ü§ñ ${data.reply}</span></div>`;
        msgBox.scrollTop = msgBox.scrollHeight;
    }

    function quickAsk(text) {
        document.getElementById("ai-question").value = text;
        askAI();
    }

async function payFee(planId, amount) {

  const res = await fetch("/payout/create-order/" + planId, {
    method: "POST"
  });

  const data = await res.json();

  const options = {
    key: data.key,
    amount: data.amount,
    currency: "INR",
    name: "GigSetu",
    description: "Processing Fee",
    order_id: data.orderId,

    handler: async function (response) {

      await fetch("/payout/verify-payment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          ...response,
          planId
        })
      });

      location.reload();
    }
  };

  const rzp = new Razorpay(options);
  rzp.open();
}
async function payEMI(loanId) {

  const res = await fetch("/payout/emi/create-order/" + loanId, {
    method: "POST"
  });

  const data = await res.json();

  const options = {
    key: data.key,
    amount: data.amount,
    currency: "INR",
    name: "GigSetu",
    description: "Loan EMI Payment",
    order_id: data.orderId,

    handler: async function (response) {

      await fetch("/payout/emi/verify-payment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          ...response,
          loanId
        })
      });

      location.reload();
    }
  };

  const rzp = new Razorpay(options);
  rzp.open();
}

</script>

